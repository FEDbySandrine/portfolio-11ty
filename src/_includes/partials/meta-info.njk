
<base href="{{ page.url }}" />
<meta name="description" content="{% if description %}{{ description }}{% else %}{{ meta.siteDescription }}{% endif %}">

<meta name="robots" content="index,follow" />
<meta name="googlebot" content="index,follow" />
<meta name="generator" content="{{ eleventy.generator }}" />

{# Disable automatic detection and formatting of possible phone numbers #}
<meta name="format-detection" content="telephone=no" />

{# Helps prevent duplicate content issues #}
<link rel="canonical" href="{{ meta.url }}{{ page.url }}" />

{% if meta.meta_data.mastodonProfile %}
{# Mastodon verified site #}
<link rel="me" href="{{ meta.meta_data.mastodonProfile }}" />
{% endif %}

{# Open Graph meta #}
<meta property="og:type" content="website">
<meta property="og:url" content="{{ meta.url }}{{ page.url }}" />
<meta property="og:title" content="{% if title %}{{ title }}{% else %}{{ meta.siteName }}{% endif %}">
<meta property="og:description" content="{% if description %}{{ description }}{% else %}{{ meta.siteDescription }}{% endif %}">
<meta property="og:site_name" content="{{ meta.siteName }}">
<meta property="og:locale" content="{{ meta.locale }}">
<meta property="og:image" content="{% if featured_image %}/assets/images/{{ featured_image }}.webp{% else %}{{ meta.meta_data.opengraph_default }}{% endif %}">

{# Favicon #}
<link rel="icon" href="{{ '/assets/images/favicon.svg' | url }}" type="image/svg+xml">